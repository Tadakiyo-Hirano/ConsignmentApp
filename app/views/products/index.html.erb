<% provide(:title, "商品一覧") %>

<h2><i class="fas fa-boxes"></i>&nbsp;商品一覧・編集</h2>
<div class="container">
  <div class="col col-md-12 admin-menu">
    <div>
      <%= form_with(scope: :search, url: products_path, class: "form-inline", method: :get, local: true) do |f| %>
        <div class="input-group mb-3">
          <%= f.text_field :code, placeholder: "#{Product.human_attribute_name :code}", class: "form-control" %>
          <%= f.text_field :name, placeholder: "#{Product.human_attribute_name :name}", class: "form-control" %>
          <div class="input-group-append">
            <%= f.submit "検索", class: "btn btn-sm btn-default" %>
          </div>
        </div>
        <div class="ml-3 mb-3"><%= search_results_text %></div>
      <% end %>
    </div>
    
    
    <%= paginate @products %>
    
    <table class="table-responsive table-bordered table-condensed table-hover bg-light" id="table-products">
      <thead>
        <tr>
          <th class="pc-width"><%= link_to "登録", new_product_path, class: "btn btn-default btn-sm btn-new-products" %></th>
          <th><%= Product.human_attribute_name :code %></th>
          <th><%= Product.human_attribute_name :name %></th>
          <th class="pc-display"><%= Product.human_attribute_name :classification %></th>
          <th class="pc-display"><%= Product.human_attribute_name :category %></th>
        </tr>
      </thead>
      
      <% @products.each do |product| %>
        <tr>
          <td>
            <a class="btn btn-default btn-sm" data-toggle="collapse" href="#collapse1-<%= product.id %>"
               role="button" aria-expanded="false" aria-controls="collapse1-<%= product.id %>">
              編集
            </a>
            <%= link_to "削除", product, method: :delete, data: { confirm: "【#{product.code}】#{product.name}を削除しますか？" }, class: "btn btn-danger btn-sm btn-delete-products" %>
          </td>
          <td><%= product.code %><a class=<%= stamp(product.created_at, product.updated_at) %>></td>
          <td><%= product.name %></td>
          <td class="pc-display"><%= product.classification %></td>
          <td class="pc-display"><%= product.category %></td>
        </tr>
        <tr>
          <td colspan="5">
            <div class="collapse" id="collapse1-<%= product.id %>">
              <div class="collapse-body">
                <%= render 'form', { product: product } %>
              </div>
            </div>
          </td>
        </tr>
      <% end %>
    </table>
  </div>
</div>
