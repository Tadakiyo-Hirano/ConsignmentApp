<% provide(:title, "管理者ログイン") %>

<div class="container">
  <div class="col col-md-6 offset-3 login-top">
    <div class="center jumbotron">
      <p>
        <i class="fas fa-user-cog"></i>
        管理者ログイン
      </p>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "管理者ID", class: "form-control" %>
        </div>
      
        <div class="field">
          <%= f.password_field :password, autocomplete: "current-password", placeholder: "パスワード", class: "form-control" %>
        </div>
      
        <!--<% if devise_mapping.rememberable? %>-->
        <!--  <div class="field">-->
        <!--    <%= f.check_box :remember_me %>-->
        <!--    <%= f.label :remember_me %>-->
        <!--  </div>-->
        <!--<% end %>-->
      
        <div class="actions">
          <%= f.submit "ログイン", class: "btn btn-default form-control" %>
        </div>
      <% end %>
      <%= render "admins/shared/links" %>
      <div class="admin-link"><%= link_to "", root_path, class: "fas fa-user fa-lg" %></div>
    </div>
  </div>
</div>
