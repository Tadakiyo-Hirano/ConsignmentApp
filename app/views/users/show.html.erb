          <th class="pc-display"><%= Product.human_attribute_name :code %></th>
          <th><%= Product.human_attribute_name :name %></th>
          <th>委託台数</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td class="pc-display">test</td>
