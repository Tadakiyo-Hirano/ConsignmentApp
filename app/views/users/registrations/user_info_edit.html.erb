<% provide(:title, current_user.name) %>

<%= current_user.name %>
<div class="container">
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <%= form_with model: current_user, url: {action: 'user_info_update'} do |f|  %>
        <%= f.label :code %>
        <%= f.number_field :code, min: 0, max: 999, class: "form-control label-user_info" %>
        
        <%= f.label :name %>
        <%= f.text_field :name, class: "form-control label-user_info" %>
        
        <%= f.submit "更新", class: "btn btn-default btn-block btn-user_info" %>
      <% end %>
    </div>
  </div>
</div>
